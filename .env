# 开发服务器端口
VITE_PORT=8888

# loading 组件大小（屏幕最小宽度 / 此值 → 数字越小，loading 越大）
VITE_LOADING_SIZE=5

# 是否启用 debug 模式（true | false）
VITE_DEBUG=false

# 路由模式
VITE_ROUTER_MODE=hash



# ==========================================
# 构建优化配置
# ==========================================

# 是否在构建中移除 debugger 语句（true | false）
VITE_DROP_DEBUGGER=true

# 是否在构建中移除 console 语句（true | false）
VITE_DROP_CONSOLE=true

# 是否启用构建分析（true | false）- 生成打包体积报告
VITE_BUILD_ANALYZE=false

# 是否生成 source map 文件（true | false）
VITE_BUILD_SOURCEMAP=true

# 构建产物压缩方式（none | gzip | brotli | both）
VITE_COMPRESSION=none

# 是否启用 legacy 模式以支持旧版浏览器（true | false）
VITE_LEGACY=false

# 是否使用 CDN 加载第三方依赖（true | false）
VITE_CDN=false
