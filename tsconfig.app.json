{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/types/types.d.ts",
    "src/types/**/*.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "build/**/*",
    "types/**/*",
    "src/router/utils/helper.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@!/*": ["./src/api/*"],
      "@#/*": ["./src/common/*"]
    }
  },
  "vueCompilerOptions": {
    "plugins": ["@vue/language-plugin-pug"]
  }
}
