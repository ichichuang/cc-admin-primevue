{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/types.d.ts",
    "src/types/**/*.ts",
    "src/env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "build/**/*",
    "types/**/*",
    "src/router/utils/helper.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@build/*": ["./build/*"],
      "@types/*": ["./types/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@views/*": ["./src/views/*"],
      "@utils/*": ["./src/utils/*"],
      "@stores/*": ["./src/stores/*"],
      "@router/*": ["./src/router/*"],
      "@api/*": ["./src/api/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@common/*": ["./src/common/*"],
      "@test/*": ["./src/views/test/*"]
    }
  }
}
